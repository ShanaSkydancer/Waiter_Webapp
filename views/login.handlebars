<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Better Latte Than Never</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Acme" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bitter" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-auto col-md-3">
                <div class="form-login">
                <h4>Please Log In</h4>
                <form class="inputForm" action="/login" method="post">
                    <input type="text" id="userInput" name="userInput" class="userInput form-control input-sm chat-input" placeholder="Username" />
                    </br>
                    <input type="text" id="userPass" name="userPass" class="userPass form-control input-sm chat-input" placeholder="Password" />
                    </br>
                    <div class="wrapper">
                    <span class="group-btn">     
                    <button type="submit" name="loginButton" class="loginButton btn btn-primary btn-md">Log In</button>
                    </span>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>

    {{#if messages.error}}
        <div class="error">
         {{messages.error}}
        </div>
    {{/if}}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
